{
   "manifest_version": 2,
   "name": "Drupal themer",
   "permissions": [],
   "version": "1.0.0",
    "background": {
        "persistent": false,
        "scripts": [ "background.js" ]
    },
   "page_action": {
      "default_icon": "/images/64-disabled.png",
      "default_title": "Enable theme debbugging"
   },
   "content_scripts": [
      {
        "js": [
          "jquery.min.js",
          "jquery-ui/jquery-ui.min.js",
          "content.js"
        ],
        "css": [
          "jquery-ui/jquery-ui.min.css",
          "jquery-ui/jquery-ui.theme.min.css",
          "content.css"
        ],
        "matches": [ "http://*/*", "https://*/*" ],
        "run_at": "document_start",
        "all_frames": true
      }
   ],
  "web_accessible_resources": [
    "jquery-ui/images/*"
  ],
  "description": "---------",
   "icons": {
      "64": "images/64-enabled.png"
   }
}
